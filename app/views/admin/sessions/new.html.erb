<%= form_tag '/admin/login', :id => "login" do %> 
    <%= render 'layouts/admin/flash_messages' %>

    <div class="row">
    <div class="card" style="width: 40%; margin: 0% auto; margin-top: 10%;">
        <div class="card-body">
            <h1 style="text-align: center">
                <img src="/assets/images/nanajun.png" alt="otb-logo" style="width: 50%;margin-top: -10%;">
            </h1>
            <form>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <%= email_field_tag :email, "", class:"form-control", placeholder:"Digite seu email"%>
                    <small id="emailHelp" class="form-text text-muted">Seu e-mail est√° seguro conosco.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Senha</label>
                    <%= password_field_tag :password, "", class:"form-control" , placeholder: "Senha" %>
                </div>
                <%= button_tag :submit, class:"btn btn-primary" do %>
                    <i class="fa fa-unlock-alt"></i> Entrar
                <% end %>
            </form>
        </div>
    </div>
</div>

<% end %>

<style>
    .btn-primary {
        background-color: #006abf!important;
        color: #fff;
    }

    body {
        background: #faed9b;
    }
</style>